{
    "name": "Azure Functions & Python",
    "dockerFile": "Dockerfile",
    "forwardPorts": [
        7071
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=pf_venv,target=${containerWorkspaceFolder}/app/.venv,type=volume"
    ],
    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "workbench.colorTheme": "dark-plus-syntax"
    },
    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-pyright.pyright",
        "ms-vscode.powershell",
        "ms-python.anaconda-extension-pack",
        "redhat.vscode-yaml",
        "visualstudioexptteam.vscodeintellicode",
        "shardulm94.trailing-spaces",
        "eamodio.gitlens",
        "tyriar.shell-launcher",
        "dunstontc.dark-plus-syntax",
        "foxundermoon.shell-format",
        "aaron-bond.better-comments",
        "kevinrose.vsc-python-indent",
        "mechatroner.rainbow-csv",
        "coenraads.bracket-pair-colorizer-2",
        "littlefoxteam.vscode-python-test-adapter"
    ],
    "remoteEnv": {
        "APP_ROOT": "app",
        "AppSecret": "${localEnv:AppSecret}",
        "CONNSTR_DB": "${localEnv:CONNSTR_DB}"
    },
    // Setup Python virtual environemnt and install ohmyzsh.
    "postCreateCommand": "zsh ./pysetup.sh venv && sh -c '$(wget -O- https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)' && sh -c "
}
